<h1>Listing employees</h1>

 <div class="media">
      <div class="media-body">

       <table class="table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Job type</th>
      <th>Date of Hire</th>
      <th>Salary</th>
      <th>Vacation days</th>
      <th>Status</th>
      <th>Department</th>
      <th>Manager</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.phone %></td>
        <td><%= employee.job_type %></td>
        <td><%= employee.date_of_hire %></td>
        <td><%= employee.salary %></td>
        <td><%= employee.vacation_days %></td>
        <td><%= employee.status %></td>
        <td><%= employee.department %></td>
        <td><%= employee.manager%></td>
        <td><%= link_to 'Show', employee, class: 'btn btn-mini btn-primary' %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>

<br>


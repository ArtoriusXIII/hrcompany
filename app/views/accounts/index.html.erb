<p id="notice"><%= notice %></p>

<h1>Listing Account for Customer 
<%= @employee.first_name %>
<%= @employee.last_name %>
</h1>

<div class="media">
      <div class="media-body">

<!-- a customer can have 0 or 1 account--> 
<!-- if the customer does not have an account we cannot 
    display the account details as the application will crash--> 
<% if @account == nil %>
  <h3> This employee has no account yet. </h3> 
<% else %> 
  <!-- the account exists, let's display its details-->





       <table class="table table-hover">
  <thead>
    <tr>
     
      <th>Details</th>
      <th>Employee</th>
      <th>Comments</th>
      <th>Address1</th>
      <th>Address2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
      <tr>
       
        <td><%= @account.details %></td>
        <td><%= @account.employee %></td>
        <td><%= @account.comments %></td>
        <td><%= @account.address1 %></td>
        <td><%= @account.address2 %></td>
        <td><%= link_to 'Show', employee_account_path(@employee, @account), class: 'btn btn-mini btn-primary' %></td>
        <td><%= link_to 'Edit', edit_employee_account_path(@employee, @account), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', employee_account_path(@employee, @account), method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
  

<br>

<%= link_to 'New Account', new_employee_account_path(@employee), class: 'btn btn-mini btn-primary' %>
<%= link_to 'Back to employee', @employee, class: 'btn btn-mini btn-success' %>



    
    
    
    
    
    
    
    
    